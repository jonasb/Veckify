<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/alarmList"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.0" />

    <LinearLayout android:id="@+id/undobar" style="@style/UndoBar">
        <TextView android:id="@id/undobar_message" style="@style/UndoBarMessage" />
        <Button android:id="@id/undobar_button" style="@style/UndoBarButton" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nowPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#ccc">

        <TextView
            android:id="@+id/trackArtists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMediumInverse" />

        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trackArtists"
            android:layout_marginBottom="6dp"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:id="@+id/trackProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trackName" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_button_next" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nextButton"
            android:layout_toLeftOf="@id/nextButton"
            android:src="@drawable/ic_button_pause" />

        <ImageButton
            android:id="@+id/resumeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nextButton"
            android:layout_toLeftOf="@id/nextButton"
            android:src="@drawable/ic_button_resume" />
    </RelativeLayout>
</LinearLayout>

